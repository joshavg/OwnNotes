{% extends 'lanigerownnotesBundle::layout.html.twig' %}

{% block body %}
    <div class="col-md-10">
        {% if error %}
            <div class="alert alert-danger">
                {{ 'error.login.invalid'|trans }}
                <span style="display: none">{{ error.messageKey|trans(error.messageData) }}</span>
            </div>
        {% endif %}

        {% set width_col_1 = 2 %}
        {% set width_col_2 = 6 %}
        <form class="form-horizontal" action="{{ path('login_check') }}" method="post" style="margin: auto;">
            <div class="form-group">
                <label class="col-sm-{{ width_col_1 }} control-label" for="username">{{ 'label.login.name'|trans }}</label>
                <div class="col-sm-{{ width_col_2 }}">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" tabindex="1" required />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-{{ width_col_1 }} control-label" for="password">{{ 'label.password'|trans }}</label>
                <div class="col-sm-{{ width_col_2 }}">
                    <input class="form-control" type="password" id="password" name="_password" tabindex="2" required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-{{ width_col_1 }} col-sm-{{ width_col_2 }}">
                    <button type="submit" class="btn">
                        {{ 'label.login'|trans }}
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}